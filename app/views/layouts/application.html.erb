  <body>
    <header>
      <%= image_tag("logo.png", id: "logo") %>
      <h1>Test Queue</h1>
    </header>

    <main>

      <%= flash[:alert] %>
      <%= flash[:notice] %>

      <%= yield %>

    </main>
  </body>
</html>
